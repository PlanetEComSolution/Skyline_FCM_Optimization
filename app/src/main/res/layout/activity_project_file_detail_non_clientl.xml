<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:orientation="vertical"
    android:padding="10dp">
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/pullToRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
       >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:padding="0dp">

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ProgressBar
                android:id="@+id/progressBar1"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:gravity="top"
            android:orientation="vertical">

            <!--<LinearLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:gravity="top"-->
            <!--android:orientation="horizontal">-->
            <Button
                android:id="@+id/btn_Approve"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/button_shape"
                android:gravity="center"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:text="Approve"
                android:textColor="@color/btn_text_sky_blue"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_PevisionNeeded"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_shape"
                android:gravity="center"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:text="Revisions Needed"
                android:textColor="@color/btn_text_sky_blue"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_Snooze"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_shape"
android:visibility="gone"
                android:gravity="center"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:text="Snooze"
                android:textColor="@color/btn_text_sky_blue"
                android:textSize="14sp" />
            <Button
                android:id="@+id/btn_Comment"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_shape"

                android:gravity="center"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:text="Comment"
                android:textColor="@color/btn_text_sky_blue"
                android:textSize="14sp" />
            <!--</LinearLayout>-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_download"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/download" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_share"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/share_1" />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="top"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/CustomTextView_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:gravity="left"
                android:text="File Name" />

            <TextView
                android:id="@+id/tv_file_name"
                style="@style/CustomTextView_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:gravity="left" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/list_showFile_rowTopMargin"

            android:orientation="horizontal">

            <TextView
                style="@style/CustomTextView_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="Description" />

            <TextView
                android:id="@+id/tv_file_desc"
                style="@style/CustomTextView_text"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:gravity="left"
                android:maxLines="2" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/list_showFile_rowTopMargin"

            android:orientation="horizontal">

            <TextView

                style="@style/CustomTextView_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Job Name" />

            <TextView
                android:id="@+id/tv_job_name"
                style="@style/CustomTextView_text"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:gravity="left" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/list_showFile_rowTopMargin"

            android:orientation="horizontal">

            <TextView
                style="@style/CustomTextView_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="Upload Date" />

            <TextView
                android:id="@+id/tv_upload_dated"
                style="@style/CustomTextView_text"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:gravity="left" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/list_showFile_rowTopMargin"

            android:orientation="horizontal">

            <TextView
                style="@style/CustomTextView_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="Last Action Date" />

            <TextView
                android:id="@+id/tv_last_action_dated"
                style="@style/CustomTextView_text"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:gravity="left" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/list_showFile_rowTopMargin"

            android:orientation="horizontal">

            <TextView
                style="@style/CustomTextView_title"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="Internal Status" />

            <TextView
                android:id="@+id/tv_status"
                style="@style/CustomTextView_text"
                android:layout_width="match_parent"


                android:layout_height="wrap_content"
                android:gravity="left" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/list_showFile_rowTopMargin"

            android:orientation="horizontal">

            <TextView
                style="@style/CustomTextView_title"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="Client Status" />

            <TextView
                android:id="@+id/tv_client_status"
                style="@style/CustomTextView_text"
                android:layout_width="match_parent"


                android:layout_height="wrap_content"
                android:gravity="left" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/list_showFile_rowTopMargin"

            android:orientation="horizontal">

            <TextView
                style="@style/CustomTextView_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="Comment(s)" />

            <TextView

                style="@style/CustomTextView_text"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:gravity="left" />

        </LinearLayout>

    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_marginTop="@dimen/list_showFile_rowTopMargin"
        android:scrollbars="vertical" />
    </LinearLayout>
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>