<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    

<ImageView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5sp"
            android:layout_marginRight="8dp"
            android:src="@drawable/cancell" />
    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
      android:layout_marginRight="8dp"
      android:layout_below="@+id/close"
         >
       
        <RelativeLayout
        android:id="@+id/eusername1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="1sp"
         android:background="@color/grey"
        >

        <TextView
            android:id="@+id/textView1rr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:layout_centerVertical="true"
            android:text="Confirm job completion"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/headersname" />
    </RelativeLayout>
        </RelativeLayout>

    <RelativeLayout
         android:id="@+id/descriptionofselectedcr" 
         android:layout_below="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       
      >

        <TextView
            android:id="@+id/texrtdesc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"

         	android:layout_marginLeft="2dp"
            android:layout_marginTop="20sp"
            android:text="Is the job completely finished ?"
            android:textSize="@dimen/headers"
             android:padding="4sp"
             android:textColor="#000000"
            android:background="@drawable/gradientimage"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:id="@+id/buttonss">

     

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    android:layout_marginTop="20sp"
    android:orientation="horizontal"
    android:gravity="center"
    android:weightSum="2"
        android:layout_below="@+id/descriptionofselectedcr"
    
       >
<RelativeLayout
     android:layout_width="match_parent"
        android:layout_height="fill_parent" 
           android:background="#CD0A41"
          android:gravity="center"
          android:layout_marginRight="5sp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/Btn_No"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:text="No"
            android:layout_marginRight="5sp"
            android:textSize="@dimen/headers"
               android:background="#CD0A41"
               android:textColor="#FFFFFF"
              android:textAppearance="?android:attr/textAppearanceMedium"  />
</RelativeLayout>
<RelativeLayout
     android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:gravity="center"
          android:background="#CD0A41"
          
        android:layout_weight="1">
        <TextView
            android:id="@+id/Btn_Yes"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
              android:textSize="@dimen/headers"
            android:text="Yes-stop the time clock "
            android:layout_marginLeft="5sp"
                   android:background="#CD0A41"
               android:textColor="#FFFFFF"
                 android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium" />
</RelativeLayout>
    </LinearLayout>

</RelativeLayout>
