<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">




    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"

        android:layout_margin="5dp"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp">




            <TextView
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:background="@drawable/s"
                android:textSize="14dp"
                android:textColor="#fff"

                android:gravity="center_vertical"
                android:text="Type"
                android:paddingLeft="4dp"
                android:id="@+id/e"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:textSize="12dp"
                android:id="@+id/e1"
                android:paddingLeft="4dp"

              android:layout_marginLeft="3dp"
                android:background="@drawable/shape1"
                android:gravity="center_vertical"
                android:layout_toRightOf="@+id/e"
                android:text="Fish Bowl"/>

        </RelativeLayout>




        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:background="@drawable/s"
                android:textSize="14dp"
                android:textColor="#fff"

                android:paddingLeft="4dp"
                android:gravity="center_vertical"
                android:text="Description"
                android:id="@+id/des"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:textSize="12dp"
                android:paddingLeft="4dp"
                android:layout_marginLeft="3dp"
                android:background="@drawable/shape1"
                android:id="@+id/des_text"
                android:gravity="center_vertical"
                android:layout_toRightOf="@+id/des"
                android:text="New type"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:background="@drawable/s"
                android:textSize="14dp"
                android:textColor="#fff"

                android:paddingLeft="4dp"
                android:gravity="center_vertical"
                android:text="Quantity"
                android:id="@+id/q"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:textSize="12dp"
                android:paddingLeft="4dp"
                android:layout_marginLeft="3dp"
                android:background="@drawable/shape1"
                android:id="@+id/q_text"
                android:gravity="center_vertical"
                android:layout_toRightOf="@+id/q"
                android:text="1"/>

        </RelativeLayout>



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:background="@drawable/s"
                android:textSize="14dp"
                android:textColor="#fff"

                android:gravity="center_vertical"
                android:text="Image"
                android:paddingLeft="4dp"
                android:id="@+id/image"/>

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="3dp"
                android:textSize="12dp"
                android:id="@+id/image_text"
                android:background="@drawable/shape1"
                android:gravity="center_vertical"
                android:layout_toRightOf="@+id/image"
                android:text="Description"/>

        </RelativeLayout>




        <RelativeLayout
        android:layout_width="wrap_content"
            android:layout_marginTop="4dp"
        android:layout_height="wrap_content">
            <TextView
            android:layout_width="80dp"
            android:layout_height="40dp"
                android:background="@drawable/s"
                android:textSize="14dp"
                android:textColor="#fff"

                android:paddingLeft="4dp"
                android:gravity="center_vertical"
            android:text="Exp. Return Date"
            android:id="@+id/date"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:textSize="12dp"
            android:paddingLeft="4dp"
            android:layout_marginLeft="3dp"
            android:background="@drawable/shape1"
            android:id="@+id/date_text"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/date"
            android:text="06/13/2016"/>

    </RelativeLayout>




        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:background="@drawable/s"
                android:textSize="14dp"
                android:textColor="#fff"

                android:gravity="center_vertical"
                android:text="Status"
                android:paddingLeft="4dp"
                android:id="@+id/status"/>

            <Spinner
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:textSize="12dp"
                android:layout_marginLeft="3dp"
                android:background="@drawable/shape1"
                android:id="@+id/status_text"

                android:gravity="center_vertical"
                android:layout_toRightOf="@+id/status"
               />

        </RelativeLayout>




        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:background="@drawable/s"
                android:textSize="14dp"
                android:textColor="#fff"
                android:paddingLeft="4dp"
                android:gravity="center_vertical"
                android:text="Inclode/Not Included"
                android:id="@+id/not"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textSize="12dp"
                android:id="@+id/not_test"

                android:gravity="center_vertical"
                android:layout_toRightOf="@+id/not"
                android:text="Inclode/Not Included"
                android:checked="false" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:textSize="14dp"
                android:id="@+id/view"
                android:background="@drawable/s"
                android:textColor="#fff"

                android:layout_marginLeft="80dp"
                android:gravity="center"
                android:text="View"
                />

        </RelativeLayout>



    </LinearLayout>

    </LinearLayout>