<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="10sp"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/itempis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/itencount"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="left|center_vertical"

                android:text="Item 1"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/uploadpict"
                android:layout_width="120dp"
                android:layout_height="35dp"


                android:layout_gravity="right"
                android:layout_marginLeft="15sp"
                android:background="@drawable/round_corner_btn2_new"
                android:gravity="center"
                android:text="Upload Picture"
                android:textColor="@color/btn_text_sky_blue"


                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:padding="5dp">


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/itemdetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Item Description"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:textColor="#000"
                    android:textColorHint="#000" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/itemdetails1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Describe the Damage"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:textColor="#000"
                    android:textColorHint="#000" />
            </android.support.design.widget.TextInputLayout>

            <Spinner
                android:id="@+id/spnr_Item_Type"
                style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:gravity="center" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <EditText
                    android:id="@+id/itemdetails2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Estimated material cost"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:textColor="#000"
                    android:textColorHint="#000" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <EditText
                    android:id="@+id/itemdetails3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Labor Hours"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:textColor="#000"
                    android:textColorHint="#000" />
            </android.support.design.widget.TextInputLayout>


        </LinearLayout>


    </LinearLayout>


</LinearLayout>
