<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <ImageView
        android:visibility="invisible"
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5sp"
            android:layout_marginRight="8dp"
            android:src="@drawable/cancell" />
    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
     
        android:layout_below="@+id/close">
       
        <RelativeLayout
        android:id="@+id/eusername1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="1sp"
         android:background="@color/grey"
        >

        <TextView
            android:id="@+id/textView1rr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:layout_centerVertical="true"
            android:text="Labour code"
           android:textColor="#FFFFFF"

            android:textSize="@dimen/headersname" />
    </RelativeLayout>
        </RelativeLayout>

    <RelativeLayout
         android:id="@+id/descriptionofselectedcr" 
         android:layout_below="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       
      >

        <TextView
            android:id="@+id/texrtdesc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"

            android:layout_marginLeft="2dp"
            android:layout_marginTop="20sp"
            android:text="You need to  choose your Labour code"
            android:paddingLeft="4sp"
            android:textSize="@dimen/headers"
            android:background="@drawable/gradientimage"
            android:textColor="#000000"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:id="@+id/buttonss">

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    android:layout_marginTop="20sp"
    android:orientation="horizontal"
    android:gravity="center"
    android:weightSum="2"
    android:minHeight="40sp"
        android:layout_below="@+id/descriptionofselectedcr"
    
       >

        

        <TextView
            android:id="@+id/Btn_Yes"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
              android:textSize="@dimen/headers"
            android:text="OK"
            android:layout_marginLeft="5sp"
              
                 android:gravity="center"
       android:textColor="#FFFFFF"

 android:background="#FF0049"

            android:textAppearance="?android:attr/textAppearanceMedium" />
        
        

    </LinearLayout>

</RelativeLayout>
