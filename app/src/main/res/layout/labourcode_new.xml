<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:gravity="center"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@drawable/corner_round"
            android:gravity="center"
            android:orientation="vertical">

            <!---add your views here
            android:padding="16dp"
            -->

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center"

                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView1rr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Labor code"

                    android:textSize="16sp"


                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/texrtdesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"

                    android:gravity="center"
                    android:padding="5dp"
                    android:text="You need to  choose your Labor code"
                    android:textSize="16sp"

                    android:textStyle="normal" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"

                    android:paddingBottom="5dp">


                    <TextView
                        android:id="@+id/Btn_Yes"
                        android:layout_width="140dp"
                        android:layout_height="35dp"

                        android:background="@drawable/round_corner_btn2_new"
                        android:gravity="center"
                        android:text="Ok"
                        android:textColor="@color/btn_text_sky_blue"

                        android:textSize="17sp"

                        />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="top|right"
            android:clickable="true"
            android:src="@drawable/error_1" />
    </FrameLayout>

</LinearLayout>