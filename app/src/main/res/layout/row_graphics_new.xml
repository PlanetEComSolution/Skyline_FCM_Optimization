                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/list_showFile_rowTopMargin"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/download_file"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/round_corner_btn"
                        android:text="download"
                        android:textColor="@android:color/white"
                        android:textSize="10sp"
                        android:visibility="gone"
                        />

                    <Button
                        android:id="@+id/view_file"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:background="@drawable/round_corner_btn_red"
                        android:text="  View  "
                        android:textColor="@android:color/white"
                        android:textSize="10sp"
                        android:visibility="gone"

                        />    </LinearLayout>






            </LinearLayout>
            <ImageView
                android:id="@+id/btn_explore"
                android:layout_width="@dimen/img_size_whtsinside"
                android:layout_height="@dimen/img_size_whtsinside"
                android:layout_gravity="center_vertical"
                android:src="@drawable/info_1"
                android:layout_marginTop="8dp"
                android:text="Button" />

        </LinearLayout>



    </LinearLayout>

</android.support.v7.widget.CardView>