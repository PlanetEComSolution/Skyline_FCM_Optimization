<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">


    <!---->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"


            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <!---add your views here-->
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:orientation="vertical">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/campany_text"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_marginLeft="12dp"
                        android:gravity="left"
                        android:text="Company : "
                        android:textColor="@color/btn_text_sky_blue"
                        android:textSize="16sp"
                        android:visibility="gone" />


                    <!-- <AutoCompleteTextView
                         android:id="@+id/company"
                         android:layout_width="wrap_content"
                         android:layout_height="35dp"
                         android:hint="Enter Company"/>-->
                    <AutoCompleteTextView
                        android:id="@+id/company"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Enter Company"
                        android:maxLines="1"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:textColor="#000"
                        android:textColorHint="@color/btn_text_sky_blue"
                        android:textSize="15sp"

                        />

                </LinearLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/job_text"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_marginLeft="12dp"
                        android:gravity="left"
                        android:text="Job #       : "
                        android:textColor="@color/btn_text_sky_blue"
                        android:textSize="16sp"
                        android:visibility="gone" />


                    <AutoCompleteTextView
                        android:id="@+id/job"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Enter Job"
                        android:maxLines="1"

                        android:textColorHint="@color/btn_text_sky_blue"
                        android:textSize="15sp"

                        />

                </LinearLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="40dp"
                    android:paddingRight="40dp">

                    <Button
                        android:id="@+id/go_button"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/round_corner_btn2_new"
                        android:gravity="center"

                        android:text="Go"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/btn_text_sky_blue"
                        android:textSize="@dimen/headers" />

                    <TextView
                        android:id="@+id/or"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="OR"

                        android:textSize="16dp"
                        android:textStyle="normal" />

                    <Button
                        android:id="@+id/Scann"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/round_corner_btn2_new"
                        android:gravity="center"

                        android:text="Scan SWO"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/btn_text_sky_blue"
                        android:textSize="@dimen/headers" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>



    <!---->

</LinearLayout>